{
	"name": "csg-builder",
	"version": "1.4.0",
	"type": "module",
	"main": "build/index.js",
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"export": "tsx --tsconfig tsconfig.cli.json bin/csg-export.ts",
		"ts:check": "svelte-check --tsconfig ./tsconfig.json",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write . | grep -v 'unchanged' | sed G",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"npm:reinstall": "rm -rf ./node_modules && rm -f ./package-lock.json && npm i && npm i",
		"all": "node --run format:fix && node --run lint:fix && node --run ts:check && node --run build"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/vite": "^4.1.17",
		"@tsconfig/svelte": "^5.0.6",
		"@types/node": "^24.10.1",
		"@types/three": "^0.181.0",
		"@typescript-eslint/eslint-plugin": "^8.46.4",
		"@typescript-eslint/parser": "^8.46.4",
		"autoprefixer": "^10.4.22",
		"commander": "^14.0.2",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.13.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.28.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.7",
		"svelte-check": "^4.3.4",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.17",
		"tslib": "^2.8.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@threlte/core": "^8.3.0",
		"@threlte/extras": "^9.7.0",
		"three": "^0.181.1",
		"three-bvh-csg": "^0.0.17"
	}
}
